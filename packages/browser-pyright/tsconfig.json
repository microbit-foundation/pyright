{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./out",
        "module": "esnext",
        "lib": [
            "es2019",
            "WebWorker",
            "ScriptHost"
        ],
        "paths": {
            "pyright-internal/*": [
                "../pyright-internal/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}
